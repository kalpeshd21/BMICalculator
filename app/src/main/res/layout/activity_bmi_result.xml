<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bmi_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kalpesh.bmicalculator.BmiResult">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="87dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="BACK" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnBack"
        android:layout_centerHorizontal="true"
        android:text="Share" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnShare"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/btnShare"
        android:layout_toRightOf="@+id/btnShare"
        android:text="Save" />

    <TextView
        android:id="@+id/tvUW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="15sp"
        android:layout_below="@+id/tvResult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="" />

    <TextView
        android:id="@+id/tvNW"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvUW"
        android:gravity="center_horizontal"
        android:layout_alignRight="@+id/tvUW"
        android:layout_below="@+id/tvUW"
        android:layout_marginTop="24dp"
        android:text="" />

    <TextView
        android:id="@+id/tvOW"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignLeft="@+id/tvNW"
        android:layout_alignStart="@+id/tvNW"
        android:layout_below="@+id/tvNW"
        android:layout_marginTop="24dp"
        android:text="" />

    <TextView
        android:id="@+id/tvObW"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tvOW"
        android:layout_alignStart="@+id/tvOW"
        android:layout_below="@+id/tvOW"
        android:layout_marginTop="24dp"
        android:text="" />

</RelativeLayout>
